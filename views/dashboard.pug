extends base

block styles
  link(rel="stylesheet" href="/css/dashboard.css")

block content

  // =========================
  // NAVBAR
  // =========================
  nav.navbar
    .nav-logo
      if user.userType === "user"
        a.dashboard-btn(href='/dashboard') GymSpire
      if user.userType === "coach"
        a.dashboard-btn(href='/coachDashboard') GymSpire
      if user.userType === "admin"
        a.dashboard-btn(href='/adminDashboard') GymSpire

    .nav-center
      span.nav-time
        | Current time: 
        strong #{currentTime || '12:00 PM'}

    .nav-right
      button.hamburger ☰
      .panel
        a(href="/profile") Profile
        form(action="/api/v1/auth/logout" method="GET")
          button(type="submit") Logout

  // =========================
  // WELCOME SECTION
  // =========================
  .welcome-section
    img.app-logo(src="/img/gymspirelogo.png" alt="GymSpire Logo")
    h2 Welcome, #{user.username}

  // =========================
  // INFO SECTION
  // =========================
  .info-section

    // CARD 1 — RECOMMENDATION
    .info-box
      h3.info-title Gym Status

      p
        if recommended
          strong.status-good Recommended to workout now
        else
          strong.status-bad Not recommended to workout now

      p.info-text #{message}

      p
        | Current gym load:
        span.load-num #{currentLoad}

    // CARD 2 — CURRENT USERS
    .info-box
      h3.info-title Currently Working Out

      if onlineUsers.length === 0
        p.info-text No users are currently working out.
      else
        .online-users
          each u in onlineUsers
            .online-user
              img(
                src=u.pfpUrl || "/img/default-user.png"
                alt=u.username
              )
              span= u.username

    // CARD 3 — WORKOUT LOG
    .info-box
      h3.info-title Weekly Muscle Log

      if frequencies.length === 0
        p.info-text No workout data available for this week.
      else
        ul.frequency-list
          each item in frequencies
            li.frequency-item(class=item.trained >= item.target ? "complete" : "incomplete")
              span.muscle-name #{item.muscle}
              span.muscle-count #{item.trained} / #{item.target}

  // =========================
  // DASHBOARD GRID
  // =========================
  .dashboard
    - const cards = ["Challenges", "Workout Plan", "Workout Logs", "Solo Workout"];
    each item, index in cards
      .card
        h3 #{item}
        .card-actions
          - let url = '/' + item.toLowerCase().replaceAll(' ', '-');
          - url = url === '/start-solo-workout' ? '/startSoloWorkout' : url;
          a.card-link(href=url) #{item}
          // removed info-btn here

  // =========================
  // MODAL REMOVED
  // =========================
  // Removed the modal completely — no more <div.modal> or close button

  // =========================
  // JS
  // =========================
  script(src="/js/dashboard.js")
