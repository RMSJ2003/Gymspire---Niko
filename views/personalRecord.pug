extends base

block content
  include _navbar

  h1 #{title}

  h2 #{user.username}

  if user.pfpUrl
    img(src=user.pfpUrl alt="Profile Picture" width="150")
  else
    img(src="/img/default-user.png" alt="Default Profile" width="150")

  h3 Search Personal Record

  form(id="prForm")
    input(
      type="text"
      id="exerciseInput"
      placeholder="Enter exercise name (e.g. dumbbell bench press)"
      required
    )
    button(type="submit") Search PR

  br
  div#prResult

  block scripts
    script(src="/js/pr.js")
