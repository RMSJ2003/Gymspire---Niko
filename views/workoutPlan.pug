extends base

block content
  include _navbar
  link(rel="stylesheet" href="/css/workoutPlan.css")

  // ðŸ”¹ PAGE TITLE
  h1 #{title}

  // ðŸ”¹ USER PROFILE
  h2 #{user.username}

  if user.pfpUrl
    img(src=user.pfpUrl alt="Profile Picture" width="150")
  else
    img(src="/img/default-user.png" alt="Default Profile" width="150")

  // ðŸ”¹ WORKOUT PLAN ALERT
  if !hasPlan
    p(style="color:red; font-weight:bold") You do not have a workout plan yet. Please create one first.
    a(href='/createWorkoutPlan') Create Workout Plan
  else
    a(href='/editWorkoutPlan') Edit Workout Plan

  // ðŸ”¹ EXERCISES
  if exercises.length === 0
    p No exercises in your workout plan yet.
  else
    each exercise in exercises
      .exercise-card
        h3= exercise.name
        p Target: #{exercise.target}

        if exercise.gifURL
          img(src=exercise.gifURL, alt=exercise.name, width="200")

        if exercise.instructions.length
          h4 Instructions:
          ul
            each step in exercise.instructions
              li= step

