extends base

block styles
  link(rel="stylesheet" href="/css/profile.css")

block content 
  .profile-page
    .profile-card
      h1 #{title}

      // Profile Picture
      if user.pfpUrl
        img.profile-pic(src=user.pfpUrl alt="Profile Picture")
      else
        img.profile-pic(src="/img/default-user.png" alt="Default Profile")

      hr.profile-divider

      // User Details
      .profile-details
        h2 #{user.username}
        h2 #{user.email}

      // Buttons
      .profile-actions
        a(href='/editProfile') Edit Profile
        form(id="deleteForm")
          p.form-message#formMessage
          p.warning-message
            | ⚠️ This action is permanent and cannot be undone.
          button(type="submit" id="deleteBtn") Delete Account

block scripts 
  script(src='/js/profile.js')
