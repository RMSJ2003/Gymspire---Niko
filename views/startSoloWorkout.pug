extends base

block styles
  link(rel="stylesheet" href="/css/startSoloWorkout.css")

block content
  // ðŸ”¹ TOP BAR
  .top-bar
    if user.userType === "user"
      a.dashboard-btn(href='/dashboard') Dashboard
    if user.userType === "coach"
      a.dashboard-btn(href='/coachDashboard') Dashboard
    if user.userType === "admin"
      a.dashboard-btn(href='/adminDashboard') Dashboard
    a.back-btn(href='javascript:history.back()') Back

  h1 #{title || "Solo Workout"}

  h2 #{user.username}

  if user.pfpUrl
    img.profile-pic(src=user.pfpUrl alt="Profile Picture" width="150")
  else
    img.profile-pic(src="/img/default-user.png" alt="Default Profile" width="150")

  h3 Select muscles to train today

  if muscles.length === 0
    p No muscles found in your workout plan.
  else
    form(id="startSoloWorkoutForm")
      each m in muscles
        .muscle-row
          label
            input(
              type="checkbox"
              name="targets"
              value=m.name
            )
            strong #{m.name}
            span(style="margin-left:10px; color:gray") (#{m.exerciseName})

      br
      button(type="submit" class="btn") Start Workout

  p#startMessage

block scripts
  script(src="/js/startSoloWorkout.js")
